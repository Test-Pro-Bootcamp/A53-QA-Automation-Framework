<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="TestNG">

    <test name="Example Test" preserve-order="false">
        <classes>
            <class name="LoginTests"/>
            <class name="BaseTest"/>
            <class name="Homework16Test"/>
            <class name="Homework17Test"/>
        </classes>
    </test>

    <test name="Play Song" preserve-order="false">
        <classes>
            <class name="Homework18Test">
                <methods>
                    <exclude name="playSong"/>
