            </class>
        </classes>
    </test>

    <test name="Delete Playlist" preserve-order="false">
        <parameter name ="BaseURL" value="https://qa.koel.app/" />
        <classes>
            <class name="Homework19Test">
                <methods>
                    <include name="loginUser" />
