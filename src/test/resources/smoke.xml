<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="smoke" parallel="tests" thread-count="3">

    <test name="Example Test" preserve-order="false">
        <classes>
            <class name="LoginTests"/>
            <class name="BaseTest"/>
            <class name="Homework16Test"/>
            <class name="Homework22Test"/>
            <class name="Homework23Test"/>
        </classes>
    </test>

    <test name="Play Song" preserve-order="false">
        <classes>
            <class name="Homework18Test">
                <methods>
                    <include name="playSong"/>
                </methods>
            </class>
        </classes>
    </test>


    <test name="Rename Playlist" preserve-order="false">
        <parameter name ="BaseURL" value="https://qa.koel.app/" />
        <classes>
            <class name="Homework21Test">
                <methods>
                    <include name="renamePlaylist"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>
